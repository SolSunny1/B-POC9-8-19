<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validation_for_Zip_code</fullName>
    <active>false</active>
    <errorConditionFormula>AND (
     NOT(ISBLANK( Zip_Postal_Code__c )),
     NOT(RecordType.DeveloperName= &#39;Analyst&#39;),
     NOT(REGEX(Zip_Postal_Code__c, &quot;\\d{5}(-\\d{4})?&quot;))
)</errorConditionFormula>
    <errorDisplayField>Zip_Postal_Code__c</errorDisplayField>
    <errorMessage>Please enter a valid zip code</errorMessage>
</ValidationRule>
