<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Phone</fullName>
    <active>false</active>
    <errorConditionFormula>AND(not(isblank(Phone__c)),OR(NOT(REGEX(Phone__c , &quot;\\D*?(\\d\\D*?){10}&quot;)), NOT(ISNUMBER(Phone__c))))</errorConditionFormula>
    <errorDisplayField>Phone__c</errorDisplayField>
    <errorMessage>Please enter valid phone number</errorMessage>
</ValidationRule>
