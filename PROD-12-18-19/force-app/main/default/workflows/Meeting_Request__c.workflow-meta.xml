        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>PSG Send Meeting Request to Support Team with data as of date</fullName>
        <actions>
            <name>Send_Email_Template_to_team</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>(1 AND 2) AND (3 OR 4)</booleanFilter>
        <criteriaItems>
            <field>Meeting_Request__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>PSG</value>
        </criteriaItems>
        <criteriaItems>
            <field>Meeting_Request__c.Request_Type__c</field>
            <operation>notEqual</operation>
            <value>Materials Only</value>
        </criteriaItems>
        <criteriaItems>
