            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Meeting_Request__c.Final_Date_and_Time_of_Meeting__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>PSG Send email to Support Team when the Submit box is ticked on a Meeting Request record</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
