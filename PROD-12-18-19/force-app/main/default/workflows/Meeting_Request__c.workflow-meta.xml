    <rules>
        <fullName>PSG Send Materials Only MeetingRequest with Final date populated</fullName>
        <actions>
            <name>PSG_Materials_Only_MeetingRequest_Submitted</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Meeting_Request__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>PSG</value>
        </criteriaItems>
        <criteriaItems>
            <field>Meeting_Request__c.Final_Date_and_Time_of_Meeting__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Meeting_Request__c.Request_Type__c</field>
            <operation>equals</operation>
            <value>Materials Only</value>
        </criteriaItems>
        <description>SS: Send email to designated users when the Final Date is selected and Request type is set to Materials Only.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>PSG Send Meeting Materials Required to Support Team</fullName>
        <actions>
            <name>Send_Meeting_Materials_Required_Email</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <description>PSG Send email to Support Team when the Materials Fields are updated on a Meeting Request record</description>
        <formula>OR(  ISCHANGED(Book_Format__c), ISCHANGED( Materials_Required__c ), ISCHANGED( Number_of_copies__c ), ISCHANGED( Communication_of_details_to_Client__c ), ISCHANGED(Other_Materials_Needed__c) ) &amp;&amp;  RecordType.Name = &quot;PSG&quot;</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>PSG Send Meeting Request to Support Team</fullName>
        <actions>
            <name>Send_Email_Template_to_team</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Meeting_Request__c.Submit_to_Support_Team__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Meeting_Request__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>PSG</value>
        </criteriaItems>
        <description>PSG Send email to Support Team when the Submit box is ticked on a Meeting Request record</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>PSG Send Meeting Request to Support Team with Final date populated</fullName>
        <actions>
