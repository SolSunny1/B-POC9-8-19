<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PFG_Consultant_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL(Has_Consultant__c ,&quot;Yes&quot;),ISBLANK( Consultant__c ))</errorConditionFormula>
    <errorDisplayField>Consultant__c</errorDisplayField>
    <errorMessage>You must enter the Consultant if the Has Consultant? field is &quot;Yes&quot;</errorMessage>
</ValidationRule>
