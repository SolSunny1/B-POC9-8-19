    <rules>
        <fullName>PFG Event Alert with link</fullName>
        <actions>
            <name>PFG_Alert_when_an_event_is_due</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Event.PFG_Activity_Formula__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Event.EndDateTime</field>
            <operation>equals</operation>
            <value>TODAY</value>
        </criteriaItems>
        <criteriaItems>
            <field>Event.Subject</field>
            <operation>contains</operation>
            <value>Call</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
