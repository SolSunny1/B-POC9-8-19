<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Member_Status_for_Investor</fullName>
    <active>true</active>
    <description>If Investor then choose Fund Meeting</description>
    <errorConditionFormula>AND(
$RecordType.Name = &quot;PFG_Annual_Investor_Conference&quot;,
(ISPICKVAL(Status, &quot;Investor&quot;)), ISBLANK(Fund_Meetings_Private_Investor_Day__c))</errorConditionFormula>
    <errorMessage>Please choose which Fund Meeting(s) to Invite this Investor to</errorMessage>
</ValidationRule>
