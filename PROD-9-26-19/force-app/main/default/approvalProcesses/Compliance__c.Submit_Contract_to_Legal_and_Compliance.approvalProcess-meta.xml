<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>CreatedBy</field>
        <field>CRM_Primary__c</field>
        <field>CRM_Secondary__c</field>
        <field>CurrencyIsoCode</field>
        <field>Form_Complete__c</field>
        <field>Current_BIM_Investor__c</field>
        <field>Current_PFG_Investor__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>adam.sachs@brookfield.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>alexis.rieger@brookfield.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jessica.kerr@brookfield.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Legal and Compliance approval</label>
        <name>Legal_and_Compliance_approval</name>
    </approvalStep>
    <description>Auto submit Compliance form for approval on create. Trigger via process builder: Auto Submit Compliance Form to Legal for approval</description>
    <emailTemplate>unfiled$public/Auto_Legal_and_Compliance_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Compliance__c.RecordType</field>
            <operation>equals</operation>
            <value>PSG</value>
        </criteriaItems>
        <criteriaItems>
            <field>Compliance__c.Status__c</field>
            <operation>notEqual</operation>
            <value>L&amp;C Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Send_email_to_compliance_owner_on_L_C_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Compliance_Status_to_L_C_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Compliance_Rejected_by_Legal</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Compliance_Status_to_L_C_Reject</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Compliance_Status_to_Pending_Appr</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Submit Contract to Legal and Compliance</label>
    <recallActions>
        <action>
            <name>Update_Compliance_Status_to_New</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
