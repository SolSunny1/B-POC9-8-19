<?xml version="1.0" encoding="UTF-8"?>
<AssignmentRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <assignmentRule>
        <fullName>Renewable Hub Rules</fullName>
        <active>true</active>
        <ruleEntry>
            <assignedTo>BRP_NA</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Lead.Region__c</field>
                <operation>equals</operation>
                <value>North America</value>
            </criteriaItems>
            <template>System_Emails/LeadsNewassignmentnotificationSAMPLE</template>
        </ruleEntry>
