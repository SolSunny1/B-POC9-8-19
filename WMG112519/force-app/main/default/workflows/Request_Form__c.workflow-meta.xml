<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Email_PM_Analyst_Call_or_Trip_Request</fullName>
        <description>Email PM/Analyst Call or Trip Request</description>
        <protected>false</protected>
        <recipients>
            <recipient>cate.daly@brookfield.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>val.kilpatrick@brookfield.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/PM_Analyst_Request</template>
    </alerts>
    <alerts>
        <fullName>Giveaway_Request_form_create_notification</fullName>
        <ccEmails>Clara.diaz@brookfield.com</ccEmails>
        <ccEmails>jrosier@forrestsolutions.com</ccEmails>
        <description>Giveaway Request form create notification</description>
        <protected>false</protected>
        <recipients>
            <recipient>clara.alexander@brookfield.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/GR_New_Giveawary_Form_Created</template>
    </alerts>
    <alerts>
        <fullName>Material_Request_form_create_notification</fullName>
        <ccEmails>clara.diaz@brookfield.com</ccEmails>
        <description>Material Request form create notification</description>
        <protected>false</protected>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/MR_New_Material_Request_Form_Submitted</template>
    </alerts>
    <rules>
        <fullName>GR%3A New Giveaway Request Form Submitted</fullName>
        <actions>
            <name>Giveaway_Request_form_create_notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Request_Form__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>Giveaway Requests</value>
        </criteriaItems>
        <description>SS: 03-12-19 GR create will notify Clara Diaz, Clara Alexander, jrosier@forrestsolutions.com</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>MR%3A New Material Request Form Submitted</fullName>
        <actions>
            <name>Material_Request_form_create_notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Request_Form__c.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>SS: 10-24-18 MR create will notify Clara Diaz.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>PMA%3A PM%2FAnalyst Call or Trip Request</fullName>
        <actions>
            <name>Email_PM_Analyst_Call_or_Trip_Request</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Request_Form__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>PM/Analyst Request</value>
        </criteriaItems>
        <description>New analyst request create will notify Catherine Daly and Valerie Kilpatrick</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
